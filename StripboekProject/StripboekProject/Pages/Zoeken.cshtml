@page
@model StripboekProject.Pages.Zoeken

@{
    Layout = "Shared/_Layout";
}


<div class="input-group mt-4">
    <input type="search" class="form-control rounded" name="Search" placeholder="Search" aria-label="Search" aria-describedby="search-addon"/>
    <button type="submit" class="btn btn-outline-primary">search</button>
</div>
<!-- Table met daaronder de tabel inhoud en dat haalt hij op uit Stripboek.cs -->
<div class="card mt-4"> 
    
    <table class=".tableZoeken">

        <tr class=".tableZoeken">
            <th>Titel</th>
            <th>StripId </th>
            <th>Aantal Bladzijden </th>
            <th>Serie </th>
            <th>Serienummer </th>
            <th>Uitgave </th>
            <th>Dikte mm </th>
            <th>Lengte mm </th>
            <th>Breedte mm </th>
            <th>NSFW </th>
            <th>Digitaal </th>
            <th>Verified </th>
        </tr>
        @foreach (var c in Model.stripboeken)
        {
            <tr>
                <td>@c.Titel</td>
                <td>@c.StripId</td>
                <td>@c.Aantal_blz</td>
                <td>@c.Serie</td>
                <td>@c.Serienummer</td>
                <td>@c.Uitgave</td>
                <td>@c.Dikte_mm</td>
                <td>@c.Lengte_mm</td>
                <td>@c.Breedte_mm</td>
                <td>@c.NSFW</td>
                <td>@c.Digitaal</td>
                <td>@c.Verified</td>
            </tr>
        }
    </table>
    
</div>
